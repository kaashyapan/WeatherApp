{
  "name": "WeatherApp",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build:css": "pnpx postcss-cli ./wwwroot/app.css -o ./wwwroot/app.min.css",
    "build:js": "rolldown -c rolldown.config.js",
    "watch:css": "pnpx postcss-cli ./wwwroot/app.css -o ./wwwroot/app.min.css --watch",
    "watch:js": "rolldown -c rolldown.config.js -w",
    "watch": "concurrently \"pnpm run-script watch:css\" \"pnpm run-script watch:js\" ",
    "build": "concurrently \"pnpm run-script build:css\" \"pnpm run-script build:js\" "
  },
